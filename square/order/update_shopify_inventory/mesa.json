{
    "key": "square/order/update_shopify_inventory",
    "name": "Update Shopify Inventory From New Square Orders",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 4,
                "trigger_type": "input",
                "type": "square",
                "entity": "order",
                "action": "list-created",
                "name": "Order Created",
                "version": "v2",
                "key": "square",
                "operation_id": "order_created",
                "metadata": {
                    "api_endpoint": "get /orders",
                    "poll": "@hourly:0 * * * *"
                },
                "local_fields": [],
                "selected_fields": ["poll"],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 5.1,
                "trigger_type": "output",
                "type": "loop",
                "entity": "loop",
                "name": "Loop",
                "version": "v3",
                "key": "loop",
                "operation_id": "loop_loop",
                "metadata": {
                    "key": "{{square.line_items[]}}",
                    "filter": {
                        "comparison": "equals",
                        "additional": [
                            {
                                "operator": "and",
                                "comparison": "equals"
                            }
                        ]
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "key",
                    "filter",
                    "filter.a",
                    "filter.comparison",
                    "filter.b",
                    "filter.additional"
                ],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "square",
                "entity": "v2_catalog_object",
                "action": "retrieve",
                "name": "Retrieve Catalog Object",
                "version": "v2",
                "key": "square_1",
                "operation_id": "RetrieveCatalogObject",
                "metadata": {
                    "api_endpoint": "get /v2/catalog/object/{object_id}",
                    "trigger_parent_key": "loop",
                    "path": {
                        "object_id": "{{loop.catalog_object_id}}"
                    }
                },
                "local_fields": [],
                "selected_fields": ["path", "path.object_id"],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "product_variant",
                "action": "sku_to_product_variant",
                "name": "Retrieve Product Variant Details from SKU",
                "key": "shopify",
                "operation_id": "get_mesa_productvariants_product_sku_sku_lookup",
                "metadata": {
                    "api_endpoint": "get mesa/productVariants/{{product_sku}}/sku-lookup.json",
                    "trigger_parent_key": "loop",
                    "product_sku": "{{square_1.object.item_variation_data.sku}}"
                },
                "local_fields": [],
                "selected_fields": ["product_sku"],
                "on_error": "default",
                "weight": 2
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "square",
                "entity": "v2_inventory",
                "action": "retrieve",
                "name": "Retrieve Inventory Count",
                "version": "v2",
                "key": "square_2",
                "operation_id": "RetrieveInventoryCount",
                "metadata": {
                    "api_endpoint": "get /v2/inventory/{catalog_object_id}",
                    "trigger_parent_key": "loop",
                    "path": {
                        "catalog_object_id": "{{loop.catalog_object_id}}"
                    }
                },
                "local_fields": [],
                "selected_fields": ["path", "path.catalog_object_id"],
                "on_error": "default",
                "weight": 3
            },
            {
                "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "inventory_level",
                "action": "set-by-variant",
                "name": "Set Inventory Level By Variant",
                "key": "shopify_1",
                "operation_id": "post_mesa_inventory_levels_set_by_variant",
                "metadata": {
                    "api_endpoint": "post mesa/inventory_levels/set-by-variant.json",
                    "trigger_parent_key": "loop",
                    "body": {
                        "available": "{{square_2.counts[0].quantity}}",
                        "location_id": "{{ template | label: 'What is your store''s location where the inventory will be updated?', description: 'Make sure this is the correct location and it is enabled before continuing.', tokens: false }}",
                        "variant_id": "{{shopify.product_variant_id}}"
                    }
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 4
            },
            {
                "schema": 5.1,
                "trigger_type": "output",
                "type": "loop",
                "entity": "end",
                "name": "Loop End",
                "version": "v3",
                "key": "loop_1",
                "operation_id": "loop_end",
                "metadata": {
                    "trigger_manager_key": "loop",
                    "trigger_parent_key": "loop"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 5
            }
        ]
    }
}
