{
    "key": "yotpoloyalty/customer_points/send_to_omnisend_contact",
    "name": "Save a customer's points balance to an Omnisend contact when Yotpo Points change",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 4,
                "trigger_type": "input",
                "type": "yotpoloyalty",
                "entity": "points",
                "action": "changed",
                "name": "Referrals Points Changed",
                "key": "yotpoloyalty_points",
                "operation_id": "swell_points_changed",
                "metadata": {
                    "host": "{{ template | label: 'Install the webhook URL', description: '' }}"
                },
                "local_fields": [],
                "selected_fields": ["host"],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "omnisend",
                "entity": "contact",
                "action": "list",
                "name": "List Contact",
                "key": "omnisend_contact",
                "operation_id": "LIST-contacts",
                "metadata": {
                    "api_endpoint": "get /contacts",
                    "query": {
                        "email": "{{yotpoloyalty_points.email}}",
                        "limit": "100"
                    }
                },
                "local_fields": [],
                "selected_fields": ["query", "query.email", "query.limit"],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "metadata": {
                    "a": "{{omnisend_contact.contacts.size}}",
                    "comparison": "equals",
                    "b": "1"
                },
                "local_fields": [],
                "selected_fields": ["a", "comparison", "b"],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "omnisend",
                "entity": "contact",
                "action": "update",
                "name": "Update Contact",
                "key": "omnisend_contact_1",
                "operation_id": "PATCH_contacts-contactID",
                "metadata": {
                    "api_endpoint": "patch /contacts/{contactID}",
                    "path": {
                        "contactID": "{{omnisend_contact.contacts[0].contactID}}"
                    },
                    "body": {
                        "customProperties": [
                            {
                                "key": "yotpo_loyalty_points",
                                "value": "{{yotpoloyalty_points.current_balance}}"
                            }
                        ]
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "path",
                    "path.contactID",
                    "body",
                    "body.customProperties",
                    "body.customProperties[].key",
                    "body.customProperties[].value"
                ],
                "on_error": "default",
                "weight": 2
            }
        ]
    }
}
