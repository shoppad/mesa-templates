{
    "key": "stamped_io/review/send_negative_review_to_customer_email",
    "name": "Send an email to a customer when a negative Stamped.io review is received",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 4,
                "trigger_type": "input",
                "type": "stampedio",
                "entity": "review",
                "action": "created",
                "name": "Review Created",
                "key": "stampedio",
                "operation_id": "review_created",
                "metadata": {
                    "host": "{{ template | label: 'Install the webhook URL', description: '' }}"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 4.1,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "operation_id": "filter",
                "metadata": {
                    "a": "{{stampedio.reviewRating}}",
                    "comparison": "less than equal",
                    "b": "3",
                    "additional": [
                        {
                            "operator": "and",
                            "comparison": "equals"
                        }
                    ]
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "delay",
                "name": "Delay",
                "version": "v2",
                "key": "delay",
                "operation_id": "delay",
                "metadata": {
                    "amount": "1",
                    "unit": "hours",
                    "test_bypass": false
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 5,
                "trigger_type": "output",
                "type": "email",
                "name": "Send Email",
                "version": "v2",
                "key": "email",
                "operation_id": "/send-email",
                "metadata": {
                    "api_endpoint": "post /send-email",
                    "body": {
                        "to": "{{stampedio.customerEmail}}",
                        "subject": "Hi {{stampedio.author}} - is there something we can do better?",
                        "message": "Hi {{stampedio.author}}\n\nWe noticed you left us a review recently - thank you! Is there anything we can do to make things better?\n\nThanks!"
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "body.advanced_options.test_email_override"
                ],
                "on_error": "default",
                "weight": 2
            }
        ]
    }
}
