{
    "key": "recharge/customer/update_address_when_customer_updated",
    "name": "Automatically Update Address in Recharge When Shopify Customer is Updated",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "schedule",
                "name": "Schedule",
                "key": "schedule",
                "metadata": {
                    "schedule": "@daily:0 0 * * *",
                    "enqueue_type": "schedule"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "customer",
                "action": "list",
                "name": "Get List of Customers updated within the past 24 hours",
                "key": "shopify_customer",
                "metadata": {
                    "api_endpoint": "get admin/customers.json",
                    "query": {
                        "limit": "250",
                        "updated_at_min": "{{\"now\" | date: \"%Y-%m-%dT%H:%M:%S%z\" | subtract_time: 1, \"days\" | date: \"%Y-%m-%dT%H:%M:%S%z\"}}"
                    }
                },
                "local_fields": [],
                "selected_fields": ["query.updated_at_min", "query.limit"],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter: Stop the automation if no customers were found",
                "key": "filter",
                "metadata": {
                    "comparison": "is not empty",
                    "a": "{{shopify_customer}}",
                    "additional": [
                        {
                            "operator": "and",
                            "comparison": "equals"
                        }
                    ]
                },
                "local_fields": [],
                "selected_fields": ["a", "comparison"],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 5,
                "trigger_type": "output",
                "type": "loop",
                "entity": "loop",
                "name": "Loop over each customer",
                "version": "v2",
                "key": "loop",
                "operation_id": "loop_loop",
                "metadata": {
                    "key": "{{shopify_customer}}",
                    "filter": {
                        "comparison": "equals"
                    }
                },
                "local_fields": [],
                "selected_fields": ["key"],
                "on_error": "default",
                "weight": 2
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter: Check if the customer has an email address",
                "key": "filter_3",
                "metadata": {
                    "a": "{{loop.email}}",
                    "comparison": "does not equal",
                    "b": "null",
                    "trigger_parent_key": "loop",
                    "additional": [
                        {
                            "operator": "and",
                            "comparison": "equals"
                        }
                    ]
                },
                "local_fields": [],
                "selected_fields": ["a", "comparison", "b"],
                "on_error": "default",
                "weight": 3
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "recharge",
                "entity": "customer",
                "action": "list",
                "name": "List Customers",
                "key": "recharge_customer",
                "operation_id": "get-customers",
                "metadata": {
                    "api_endpoint": "get /customers",
                    "parameters": "email={{loop.email}}",
                    "trigger_parent_key": "loop"
                },
                "local_fields": [],
                "selected_fields": ["parameters"],
                "on_error": "default",
                "weight": 4
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter: Stop the automation if no customers were retrieved",
                "key": "filter_2",
                "metadata": {
                    "a": "{{recharge_customer}}",
                    "comparison": "is not empty",
                    "trigger_parent_key": "loop",
                    "additional": [
                        {
                            "operator": "and",
                            "comparison": "equals"
                        }
                    ]
                },
                "local_fields": [],
                "selected_fields": ["a", "comparison"],
                "on_error": "default",
                "weight": 5
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "recharge",
                "entity": "address",
                "action": "list",
                "name": "List Addresses",
                "key": "recharge_address",
                "operation_id": "get-addresses",
                "metadata": {
                    "api_endpoint": "get /addresses",
                    "parameters": "customer_id={{recharge_customer.0.id}}",
                    "trigger_parent_key": "loop"
                },
                "local_fields": [],
                "selected_fields": ["parameters"],
                "on_error": "default",
                "weight": 6
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter: Compare the recent Shopify information to ReCharge information",
                "key": "filter_1",
                "metadata": {
                    "comparison": "does not equal",
                    "additional": [
                        {
                            "operator": "or",
                            "a": "{{recharge_address.0.address2}}",
                            "comparison": "does not equal",
                            "b": "{{loop.default_address.address2}}"
                        },
                        {
                            "operator": "or",
                            "a": "{{recharge_address.0.city}}",
                            "comparison": "does not equal",
                            "b": "{{loop.default_address.city}}"
                        },
                        {
                            "operator": "or",
                            "a": "{{recharge_address.0.province}}",
                            "comparison": "does not equal",
                            "b": "{{loop.default_address.province}}"
                        },
                        {
                            "operator": "or",
                            "a": "{{recharge_address.0.zip}}",
                            "comparison": "does not equal",
                            "b": "{{loop.default_address.zip}}"
                        },
                        {
                            "operator": "or",
                            "a": "{{recharge_address.0.country_code}}",
                            "comparison": "does not equal",
                            "b": "{{loop.default_address.country_code}}"
                        }
                    ],
                    "a": "{{recharge_address.0.address1}}",
                    "b": "{{loop.default_address.address1}}",
                    "trigger_parent_key": "loop"
                },
                "local_fields": [],
                "selected_fields": [
                    "a",
                    "comparison",
                    "b",
                    "additional",
                    "additional[].operator",
                    "additional[].a",
                    "additional[].comparison",
                    "additional[].b"
                ],
                "on_error": "default",
                "weight": 7
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "recharge",
                "entity": "address",
                "action": "update",
                "name": "Update Address",
                "key": "recharge_address_1",
                "operation_id": "put-addresses-address_id",
                "metadata": {
                    "api_endpoint": "put /addresses/{address_id}",
                    "path": {
                        "address_id": "{{recharge_address.0.id}}"
                    },
                    "body": {
                        "address1": "{{loop.default_address.address1}}",
                        "address2": "{{loop.default_address.address2}}",
                        "city": "{{loop.default_address.city}}",
                        "country": "{{loop.default_address.country_code}}",
                        "customer_id": "{{loop.id}}",
                        "first_name": "{{loop.first_name}}",
                        "last_name": "{{loop.last_name}}",
                        "phone": "{% if loop.default_address.phone %}{{loop.default_address.phone}}{% else %}No phone number provided{% endif %}",
                        "zip": "{{loop.default_address.zip}}",
                        "province": "{{loop.default_address.province}}"
                    },
                    "parameters": "{{recharge_address.addresses.0.id}}",
                    "trigger_parent_key": "loop"
                },
                "local_fields": [],
                "selected_fields": [
                    "path",
                    "path.address_id",
                    "parameters",
                    "body",
                    "body.address1",
                    "body.address2",
                    "body.city",
                    "body.first_name",
                    "body.last_name",
                    "body.phone",
                    "body.province",
                    "body.zip"
                ],
                "on_error": "default",
                "weight": 8
            }
        ]
    }
}
