{
    "key": "recharge/customer/update_address_when_customer_created",
    "name": "Sync Address in Recharge When a New Shopify Customer is Created",
    "version": "1.0.0",
    "enabled": false,
    "setup": false,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "schedule",
                "name": "Schedule: Runs daily",
                "key": "schedule",
                "metadata": {
                    "schedule": "@daily:0 8 * * *",
                    "enqueue_type": "schedule"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
               "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "customer",
                "action": "list",
                "name": "Get List of Customers within the past 24 hours",
                "key": "shopify",
                "metadata": {
                    "api_endpoint": "get admin\/customers.json",
                    "query": {
                        "limit": "250",
                        "updated_at_min": "{{\"now\" | date: \"%Y-%m-%dT%H:%M:%S%z\" | subtract_time: 1, \"days\"}}"
                    }
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter: Checks if customers have been found",
                "key": "filter",
                "metadata": {
                    "a": "{{shopify}}",
                    "comparison": "is not empty"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 5,
                "trigger_type": "output",
                "type": "loop",
                "version": "v2",
                "entity": "loop",
                "operation_id": "loop_loop",
                "name": "Loop over each customer",
                "key": "loop",
                "metadata": {
                    "key": "{{shopify}}"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 2
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "recharge",
                "entity": "customer",
                "action": "list",
                "name": "List Customers",
                "key": "recharge",
                "metadata": {
                    "parameters": "external_customer_id={{loop.id}}"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 3
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "recharge",
                "entity": "address",
                "action": "list",
                "name": "List Addresses",
                "key": "recharge_1",
                "metadata": {
                    "parameters": "customer_id={{recharge[0].id}}"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 4
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "filter",
                "name": "Compare recent Shopify info to ReCharge info",
                "key": "filter_1",
                "metadata": {
                    "a": "{{recharge_1.0.address1}}",
                    "comparison": "does not equal",
                    "b": "{{loop.default_address.address1}}",
                    "additional": [
                        {
                            "operator": "or",
                            "a": "{{recharge_1.0.address2}}",
                            "comparison": "does not equal",
                            "b": "{{loop.default_address.address2}}"
                        },
                        {
                            "operator": "or",
                            "a": "{{recharge_1.0.city}}",
                            "comparison": "does not equal",
                            "b": "{{loop.default_address.city}}"
                        },
                        {
                            "operator": "or",
                            "a": "{{recharge_1.0.province}}",
                            "comparison": "does not equal",
                            "b": "{{loop.default_address.province}}"
                        },
                        {
                            "operator": "or",
                            "a": "{{recharge_1.0.zip}}",
                            "comparison": "does not equal",
                            "b": "{{loop.default_address.zip}}"
                        },
                        {
                            "operator": "or",
                            "a": "{{recharge_1.0.country_code}}",
                            "comparison": "does not equal",
                            "b": "{{loop.default_address.country_code}}"
                        }
                    ]
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 5
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "recharge",
                "entity": "address",
                "action": "update",
                "name": "Update Address",
                "key": "recharge_2",
                "metadata": {
                    "path": {
                        "address_id": "{{recharge_1.0.id}}"
                    },
                    "body": {
                        "address1": "{{loop.default_address.address1}}",
                        "address2": "{{loop.default_address.address2}}",
                        "city": "{{loop.default_address.city}}",
                        "country": "{{loop.default_address.country_code}}",
                        "customer_id": "{{recharge_1.0.customer_id}}",
                        "first_name": "{{loop.first_name}}",
                        "last_name": "{{loop.last_name}}",
                        "phone": "{% if loop.default_address.phone %}{% else %}No phone number provided{% endif %}",
                        "zip": "{{loop.default_address.zip}}",
                        "province": "{{loop.default_address.province}}"
                    }
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 6
            }
        ],
        "storage": []
    }
}