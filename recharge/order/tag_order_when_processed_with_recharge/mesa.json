{
    "key": "recharge/order/tag_order_when_processed_with_recharge",
    "name": "Automatically Tag Shopify Orders Processed with Recharge",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "recharge",
                "entity": "order",
                "action": "order\/created",
                "name": "Order Created",
                "key": "recharge_order",
                "operation_id": "order_created",
                "metadata": [],
                "local_fields": [],
                "selected_fields": [
                    "topic"
                ],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order",
                "action": "retrieve",
                "name": "Retrieve Order",
                "key": "shopify_order",
                "operation_id": "get_orders_order_id",
                "metadata": {
                    "api_endpoint": "get admin\/orders\/{{order_id}}.json",
                    "order_id": "{{recharge_order.external_order_id.ecommerce}}"
                },
                "local_fields": [],
                "selected_fields": [
                    "order_id"
                ],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order",
                "action": "tag_add",
                "name": "Order Add Tag",
                "key": "shopify_order_1",
                "operation_id": "post_mesa_orders_order_id_tag",
                "metadata": {
                    "api_endpoint": "post mesa\/orders\/{{order_id}}\/tag.json",
                    "order_id": "{{shopify_order.id}}",
                    "body": {
                        "tag": "subscription"
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "order_id",
                    "body",
                    "body.tag"
                ],
                "on_error": "default",
                "weight": 1
            }
        ]
    }
}