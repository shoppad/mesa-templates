{
    "key": "recharge/order/add_free_product_to_upcoming_order",
    "name": "Include a Free Product in Customer Recharge Orders",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "recharge",
                "entity": "order",
                "action": "order/created",
                "name": "Order Created",
                "key": "recharge",
                "operation_id": "order_created",
                "metadata": [],
                "local_fields": [],
                "selected_fields": ["topic"],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order",
                "action": "line_item_add",
                "name": "Add Line Item to Order",
                "key": "shopify",
                "operation_id": "post_mesa_orders_order_id_add-line-item",
                "metadata": {
                    "api_endpoint": "post mesa/orders/{{order_id}}/add-line-item.json",
                    "order_id": "{{recharge.external_order_id.ecommerce}}",
                    "body": {
                        "product_id": "{{ template | label: 'What is the free product that will be added to the order?', description: '' }}",
                        "variant_id": "{{ template | label: 'What is the variant of the free product?', description: '' }}",
                        "quantity": "1",
                        "discount_type": "Percentage",
                        "discount_amount": "100",
                        "allow_duplicates": true,
                        "notify_customer": "false"
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "order_id",
                    "body",
                    "body.quantity",
                    "body.discount_type",
                    "body.discount_amount",
                    "body.allow_duplicates",
                    "body.notify_customer"
                ],
                "on_error": "default",
                "weight": 0
            }
        ]
    }
}
