{
    "key": "add_shopify_customer_tag",
    "name": "Automatically Tag Shopify Customers Who Purchase Subscriptions",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "recharge",
                "entity": "subscription",
                "action": "subscription/created",
                "name": "Subscription Created",
                "key": "recharge_subscription",
                "operation_id": "subscription_created",
                "metadata": [],
                "local_fields": [],
                "selected_fields": ["topic"],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "recharge",
                "entity": "customer",
                "action": "retrieve",
                "name": "Retrieve Customer",
                "key": "recharge_customer",
                "operation_id": "get-customers-customer_id",
                "metadata": {
                    "api_endpoint": "GET /customers/{{customer_id}}",
                    "customer_id": "{{recharge_subscription.customer_id}}"
                },
                "local_fields": [],
                "selected_fields": ["customer_id"],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "customer",
                "action": "retrieve",
                "name": "Retrieve Customer",
                "key": "shopify_customer_1",
                "operation_id": "get_customers_customer_id",
                "metadata": {
                    "api_endpoint": "get admin/customers/{{customer_id}}.json",
                    "customer_id": "{{recharge_customer.external_customer_id.ecommerce}}"
                },
                "local_fields": [],
                "selected_fields": ["customer_id"],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "customer",
                "action": "tag_add",
                "name": "Customer Add Tag",
                "key": "shopify_customer",
                "operation_id": "post_mesa_customers_customer_id_tag",
                "metadata": {
                    "api_endpoint": "post mesa/customers/{{customer_id}}/tag.json",
                    "customer_id": "{{shopify_customer_1.id}}",
                    "body": {
                        "tag": "Recharge Tag"
                    }
                },
                "local_fields": [],
                "selected_fields": ["customer_id", "body", "body.tag"],
                "on_error": "default",
                "weight": 2
            }
        ]
    }
}
