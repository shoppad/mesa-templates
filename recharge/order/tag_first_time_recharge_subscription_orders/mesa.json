{
    "key": "recharge/order/tag_first_time_recharge_subscription_orders",
    "name": "Tag first time Recharge subscription orders",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "recharge",
                "entity": "order",
                "action": "order/created",
                "name": "Order Created",
                "key": "recharge_order",
                "operation_id": "order_created",
                "metadata": [],
                "local_fields": [],
                "selected_fields": ["topic"],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 5,
                "trigger_type": "output",
                "type": "loop",
                "entity": "loop",
                "name": "Loop",
                "version": "v3",
                "key": "iterator",
                "operation_id": "loop_loop",
                "metadata": {
                    "key": "{{recharge_order.line_items[]}}"
                },
                "local_fields": [],
                "selected_fields": ["key"],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "recharge",
                "entity": "order",
                "action": "list",
                "name": "List Order",
                "key": "recharge_order_1",
                "operation_id": "get-orders",
                "metadata": {
                    "api_endpoint": "get /orders",
                    "parameters": "customer_id={{recharge_order.customer.id}}&purchase_item_id={{iterator.purchase_item_id}}",
                    "trigger_parent_key": "iterator"
                },
                "local_fields": [],
                "selected_fields": ["parameters"],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "filter",
                "name": "Check to see if it's the customer's first-ever order",
                "key": "filter",
                "metadata": {
                    "a": "{{recharge_order_1.size}}",
                    "comparison": "equals",
                    "b": "1",
                    "script": "filter.js",
                    "trigger_parent_key": "iterator"
                },
                "local_fields": [],
                "selected_fields": ["a", "comparison", "b", "script"],
                "on_error": "default",
                "weight": 2
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order",
                "action": "tag_add",
                "name": "Order Add Tag",
                "key": "shopify_order",
                "operation_id": "post_mesa_orders_order_id_tag",
                "metadata": {
                    "api_endpoint": "post mesa/orders/{{order_id}}/tag.json",
                    "order_id": "{{recharge_order.external_order_id.ecommerce}}",
                    "body": {
                        "tag": "Subscription First Order"
                    },
                    "trigger_parent_key": "iterator"
                },
                "local_fields": [],
                "selected_fields": ["order_id", "body", "body.tag"],
                "on_error": "default",
                "weight": 3
            },
            {
                "schema": 5.1,
                "trigger_type": "output",
                "type": "loop",
                "entity": "end",
                "name": "Loop End",
                "version": "v3",
                "key": "loop",
                "operation_id": "loop_end",
                "metadata": {
                    "trigger_manager_key": "iterator",
                    "trigger_parent_key": "iterator"
                },
                "selected_fields": [],
                "on_error": "default",
                "weight": 4
            }
        ]
    }
}
