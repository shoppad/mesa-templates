{
    "key": "tracktor/fulfillment/email_when_package_takes_too_long",
    "name": "Send Email Notifications for Delayed Deliveries to Keep Customers Informed",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "tracktor",
                "entity": "fulfillment",
                "action": "fulfillment\/in_transit",
                "name": "Fulfillment Status is In Transit",
                "key": "tracktor",
                "operation_id": "fulfillment_in_transit",
                "metadata": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "delay",
                "name": "Delay",
                "version": "v2",
                "key": "delay",
                "operation_id": "delay",
                "metadata": {
                    "amount": "{{ template | label: 'How many days would you like to wait?', description: '', default: 20, type: 'number', tokens: false, placeholder: '' }}",
                    "unit": "days",
                    "test_bypass": false
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "tracktor",
                "entity": "fulfillment",
                "action": "retrieve",
                "name": "Retrieve Fulfillment",
                "key": "tracktor_1",
                "operation_id": "RetrievethetrackingstatusofaFulfillment",
                "metadata": {
                    "api_endpoint": "get \/fulfillments\/{fulfillment_id}.json",
                    "fulfillment_id": "{{tracktor.fulfillment_id}}"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 4.1,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "operation_id": "filter",
                "metadata": {
                    "a": "{{tracktor_1.latest_status.label}}",
                    "comparison": "does not equal",
                    "b": "{{tracktor_1.status.delivered.label}}",
                    "additional": [
                        {
                            "operator": "and",
                            "comparison": "equals"
                        }
                    ]
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 2
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "tracktor",
                "entity": "order",
                "action": "retrieve",
                "name": "Retrieve Order",
                "key": "tracktor_2",
                "operation_id": "RetrievethetrackingstatusesofanOrder",
                "metadata": {
                    "api_endpoint": "get \/orders\/{order_id}.json",
                    "order_id": "{{tracktor_1.order_id}}"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 3
            },
            {
                "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "shop",
                "action": "list",
                "name": "Retrieve Shop",
                "key": "shopify",
                "operation_id": "get_shop",
                "metadata": {
                    "api_endpoint": "get admin\/shop.json"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 4
            },
            {
                "schema": 5,
                "trigger_type": "output",
                "type": "email",
                "name": "Send Email",
                "version": "v2",
                "key": "email",
                "operation_id": "\/send-email",
                "metadata": {
                    "api_endpoint": "post \/send-email",
                    "body": {
                        "to": "{{tracktor_2.order_email}}",
                        "subject": "Sorry your package is taking so long!",
                        "message": "Hi {{tracktor_2.customer_full_name}},\n\nWe just wanted to reach out and apologize that the following items in your order {{tracktor_2.order_name}} are taking so long to arrive:\n{% for line_item in tracktor_1.line_items %}\n  - {{ line_item.name }} x {{ line_item.quantity }}\n{% endfor %}\nYou can find your latest order details on our tracking page: {{tracktor_1.tracking_url}}\n\nPlease feel free to reach out by responding to this email if you have any questions. \n\nThanks!\n- {{shopify.name}}"
                    }
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 5
            }
        ]
    }
}