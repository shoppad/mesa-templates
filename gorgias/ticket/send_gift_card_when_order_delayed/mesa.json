{
    "key": "gorgias/ticket/send_gift_card_when_order_delayed",
    "name": "Send a gift card to a customer if their order is delayed",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 4,
                "trigger_type": "input",
                "type": "gorgias",
                "entity": "ticket",
                "action": "list-created",
                "name": "Ticket Created",
                "version": "v2",
                "key": "gorgias",
                "operation_id": "ticket_created",
                "metadata": {
                    "api_endpoint": "put /api/views/0/items?",
                    "poll": "@hourly:0 * * * *"
                },
                "local_fields": [],
                "selected_fields": ["poll"],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "delay",
                "name": "Delay",
                "version": "v2",
                "key": "delay",
                "operation_id": "delay",
                "metadata": {
                    "amount": "1",
                    "unit": "hours",
                    "test_bypass": false
                },
                "local_fields": [],
                "selected_fields": ["amount", "unit"],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "gorgias",
                "entity": "ticket",
                "action": "retrieve",
                "name": "Retrieve Ticket",
                "version": "v2",
                "key": "gorgias_1",
                "operation_id": "retrieve_ticket",
                "metadata": {
                    "api_endpoint": "get /api/tickets/{id}/",
                    "path": {
                        "id": "{{gorgias.id}}"
                    }
                },
                "local_fields": [],
                "selected_fields": ["path", "path.id"],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 5.1,
                "trigger_type": "output",
                "type": "loop",
                "entity": "loop",
                "name": "Loop",
                "version": "v3",
                "key": "loop",
                "operation_id": "loop_loop",
                "metadata": {
                    "script": "loop.js",
                    "key": "{{gorgias_1.tags[]}}",
                    "filter": {
                        "a": "{{loop.name}}",
                        "comparison": "equals",
                        "b": "send-gift-card",
                        "additional": [
                            {
                                "operator": "and",
                                "comparison": "equals"
                            }
                        ]
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "filter.a",
                    "filter.comparison",
                    "filter.b"
                ],
                "on_error": "default",
                "weight": 2
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "govalo",
                "entity": "card",
                "action": "create",
                "name": "Create Card",
                "key": "govalo",
                "operation_id": "post-card",
                "metadata": {
                    "api_endpoint": "post /cards",
                    "trigger_parent_key": "loop",
                    "body": {
                        "firstName": "{{gorgias_1.customer.firstname}}",
                        "lastName": "{{gorgias_1.customer.lastname}}",
                        "email": "{{gorgias_1.customer.email}}",
                        "note": "Here is a small gift of appreciation!",
                        "value": "20",
                        "eventType": "giftcard",
                        "productId": "{{ template | label: 'What is the product ID?', description: '' }}"
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "body",
                    "body.firstName",
                    "body.lastName",
                    "body.email",
                    "body.note",
                    "body.value",
                    "body.eventType"
                ],
                "on_error": "default",
                "weight": 3
            },
            {
                "schema": 5.1,
                "trigger_type": "output",
                "type": "loop",
                "entity": "end",
                "name": "Loop End",
                "version": "v3",
                "key": "loop_1",
                "operation_id": "loop_end",
                "metadata": {
                    "trigger_manager_key": "loop",
                    "trigger_parent_key": "loop"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 4
            }
        ]
    }
}
