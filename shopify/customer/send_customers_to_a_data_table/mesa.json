{
    "key": "shopify/customer/send_customers_to_a_data_table",
    "name": "Send Shopify customers to a database",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "customer",
                "action": "created",
                "name": "Customer Created",
                "key": "shopify",
                "operation_id": "customers_create",
                "metadata": {
                    "frequency": "every",
                    "includeFields": []
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
              "schema": 3.1,
              "trigger_type": "output",
              "type": "shopify",
              "entity": "customer",
              "action": "retrieve",
              "name": "Retrieve Customer",
              "key": "shopify_1",
              "operation_id": "get_customers_customer_id",
              "metadata": {
                  "api_endpoint": "get admin\/customers\/{{customer_id}}.json",
                  "customer_id": "{{shopify.id}}"
              },
              "local_fields": [],
              "selected_fields": [],
              "on_error": "default",
              "weight": 0
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "data",
                "version": "v2",
                "entity": "record",
                "action": "create",
                "name": "Create Record",
                "key": "data",
                "operation_id": "post_database_table",
                "metadata": {
                    "api_endpoint": "post /{database}/{table}",
                    "table": "Shopify Customers",
                    "columns": {
                      "Customer ID": "{{shopify.id}}",
                      "Email": "{{shopify.email}}",
                      "First Name": "{{shopify.first_name}}",
                      "Last Name": "{{shopify.last_name}}",
                      "Phone": "{{shopify.phone}}",
                      "Tags": "{{shopify_1.tags}}",
                      "Note": "{{shopify.note}}"
                    }
                },
                "local_fields": [
                  {
                    "key": "columns",
                    "type": "object",
                    "fields": [
                      {
                        "key": "Customer ID",
                        "label": "Customer ID",
                        "type": "text",
                        "x-udtname": "numeric",
                        "location": "required"
                      },
                      {
                        "key": "Email",
                        "label": "Email",
                        "type": "text",
                        "x-udtname": "varchar",
                        "x-maxlength": 255,
                        "location": "required"
                      },
                      {
                        "key": "First Name",
                        "label": "First Name",
                        "type": "text",
                        "x-udtname": "varchar",
                        "x-maxlength": 255,
                        "location": "required"
                      },
                      {
                        "key": "Last Name",
                        "label": "Last Name",
                        "type": "text",
                        "x-udtname": "varchar",
                        "x-maxlength": 255,
                        "location": "required"
                      },
                      {
                        "key": "Phone",
                        "label": "Phone",
                        "type": "text",
                        "x-udtname": "varchar",
                        "x-maxlength": 255,
                        "location": "required"
                      },
                      {
                        "key": "Tags",
                        "label": "Tags",
                        "type": "text",
                        "x-udtname": "text",
                        "location": "required"
                      },
                      {
                        "key": "Note",
                        "label": "Note",
                        "type": "text",
                        "x-udtname": "text",
                        "location": "required"
                      }
                    ],
                    "location": "required"
                  }
                ],
                "selected_fields": [],
                "on_error": "default",
                "weight": 1
            }
        ]
    }
}