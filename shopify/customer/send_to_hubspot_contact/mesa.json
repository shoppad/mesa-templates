{
    "key": "shopify/customer/send_to_hubspot_contact",
    "name": "Automatically Sync Shopify Customers to HubSpot Contacts",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "customer",
                "action": "created",
                "name": "Customer Created",
                "key": "shopify_customer",
                "operation_id": "customers_create",
                "metadata": [],
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "hubspot",
                "entity": "contact",
                "action": "create",
                "name": "Hubspot Create Contact",
                "key": "hubspot_contact",
                "operation_id": "contact_create",
                "metadata": {
                    "api_endpoint": "post /crm/v3/objects/contacts",
                    "body": {
                        "properties": {
                            "email": "{{shopify_customer.email}}",
                            "firstname": "{{shopify_customer.first_name}}",
                            "lastname": "{{shopify_customer.last_name}}",
                            "phone": "{{shopify_customer.phone}}"
                        }
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "body",
                    "body.properties",
                    "body.properties.email",
                    "body.properties.firstname",
                    "body.properties.lastname"
                ],
                "on_error": "default",
                "weight": 0
            }
        ]
    }
}
