{
    "key": "shopify/customer/send_to_omnisend_contact",
    "name": "Automatically Add New Shopify Customers to Omnisend Contacts",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "customer",
                "action": "created",
                "name": "Customer Created",
                "key": "shopify_customer",
                "operation_id": "customers_create",
                "metadata": [],
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "omnisend",
                "entity": "contact",
                "action": "create",
                "name": "Create Contact",
                "key": "omnisend_contact",
                "operation_id": "POST-contacts",
                "metadata": {
                    "api_endpoint": "post /contacts",
                    "body": {
                        "email": "{{shopify_customer.email}}",
                        "smsPhoneNumber": "{{shopify_customer.phone}}",
                        "firstName": "{{shopify_customer.first_name}}",
                        "lastName": "{{shopify_customer.last_name}}",
                        "country": "{{shopify_customer.default_address.country}}",
                        "countryCode": "{{shopify_customer.default_address.country_code}}",
                        "state": "{{shopify_customer.default_address.province}}",
                        "city": "{{shopify_customer.default_address.city}}",
                        "address": "{{shopify_customer.default_address.address1}}",
                        "postalCode": "{{shopify_customer.default_address.zip}}"
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "body",
                    "body.email",
                    "body.smsPhoneNumber",
                    "body.firstName",
                    "body.lastName",
                    "body.country",
                    "body.countryCode",
                    "body.state",
                    "body.city",
                    "body.address",
                    "body.postalCode"
                ],
                "on_error": "default",
                "weight": 0
            }
        ]
    }
}
