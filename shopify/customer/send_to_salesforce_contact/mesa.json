{
    "key": "shopify/customer/send_to_salesforce_contact",
    "name": "Create Salesforce Contacts from New Shopify Customers",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "customer",
                "action": "created",
                "name": "Customer Created",
                "key": "shopify_customer",
                "operation_id": "customers_create",
                "metadata": [],
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "salesforce",
                "entity": "contact",
                "action": "create",
                "name": "Create Contact",
                "key": "salesforce_contact",
                "operation_id": "contact_create",
                "metadata": {
                    "entity_name": "Contact",
                    "method": "POST",
                    "body": {
                        "FirstName": "{{shopify_customer.first_name}}",
                        "LastName": "{{shopify_customer.last_name}}",
                        "Email": "{{shopify_customer.email}}",
                        "MailingStreet": "{{shopify_customer.default_address.address1}} {{shopify_customer.default_address.address2}}",
                        "MailingCity": "{{shopify_customer.default_address.city}}",
                        "MailingState": "{{shopify_customer.default_address.province}}",
                        "MailingPostalCode": "{{shopify_customer.default_address.zip}}",
                        "MailingCountry": "{{shopify_customer.default_address.country}}",
                        "Phone": "{{shopify_customer.default_address.phone}}"
                    }
                },
                "local_fields": [
                    {
                        "key": "body",
                        "fields": []
                    }
                ],
                "selected_fields": [
                    "body",
                    "body.FirstName",
                    "body.LastName",
                    "body.Email",
                    "body.MailingStreet",
                    "body.MailingCity",
                    "body.MailingState",
                    "body.MailingPostalCode",
                    "body.MailingCountry",
                    "body.Phone",
                    "method",
                    "entity_name"
                ],
                "on_error": "default",
                "weight": 0
            }
        ]
    }
}
