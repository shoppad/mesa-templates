{
    "key": "shopify/customer/send_to_hubspot_deal",
    "name": "Send Shopify Customer to HubSpot Contact and Deal",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "customer",
                "action": "created",
                "name": "Customer Created",
                "key": "shopify_customer",
                "operation_id": "customers_create",
                "metadata": {
                    "frequency": "every",
                    "includeFields": []
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "hubspot",
                "entity": "contact",
                "action": "create",
                "name": "Hubspot Create Contact",
                "key": "hubspot_contact",
                "operation_id": "contact_create",
                "metadata": {
                    "api_endpoint": "post /crm/v3/objects/contacts",
                    "body": {
                        "properties": {
                            "email": "{{shopify_customer.email}}",
                            "firstname": "{{shopify_customer.first_name}}",
                            "lastname": "{{shopify_customer.last_name}}"
                        }
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "body",
                    "body.properties",
                    "body.properties.email",
                    "body.properties.firstname",
                    "body.properties.lastname"
                ],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "hubspot",
                "entity": "deal",
                "action": "create",
                "name": "Hubspot Create Deal",
                "key": "hubspot_deal",
                "operation_id": "deal_create",
                "metadata": {
                    "api_endpoint": "post /crm/v3/objects/deals",
                    "body": {
                        "properties": {
                            "dealname": "{{shopify_customer.first_name}} {{shopify_customer.last_name}} Deal"
                        }
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "body",
                    "body.properties",
                    "body.properties.dealname"
                ],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "hubspot",
                "entity": "contact_association",
                "action": "update",
                "name": "Hubspot Contact Association Update",
                "key": "hubspot_contact_association",
                "operation_id": "contact_association_update",
                "metadata": {
                    "api_endpoint": "put /crm/v3/objects/contacts/{contactId}/associations/{toObjectType}/{toObjectId}/{associationType}",
                    "path": {
                        "contactId": "{{hubspot_contact.id}}",
                        "toObjectType": "deals",
                        "toObjectId": "{{hubspot_deal.id}}",
                        "associationType": "4"
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "path",
                    "path.contactId",
                    "path.toObjectType",
                    "path.toObjectId",
                    "path.associationType"
                ],
                "on_error": "default",
                "weight": 2
            }
        ]
    }
}
