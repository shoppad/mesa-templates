{
    "key": "shopify/order/create_shipstation_label",
    "name": "Automatically Create a ShipStation Label for New Shopify Orders",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "order",
                "action": "created",
                "name": "Order Created",
                "key": "shopify",
                "operation_id": "orders_create",
                "metadata": {
                    "frequency": "every",
                    "includeFields": []
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 5,
                "trigger_type": "output",
                "type": "shipstation",
                "entity": "order_createorder",
                "action": "create_order",
                "name": "Create or Update Order",
                "version": "v2",
                "key": "shipstation",
                "operation_id": "CreateUpdateOrder",
                "metadata": {
                    "api_endpoint": "post \/orders\/createorder",
                    "body": {
                        "orderNumber": "{{shopify.order_number}}",
                        "orderKey": "{{shopify.id}}",
                        "orderStatus": "awaiting_shipment",
                        "customerEmail": "{{shopify.email}}",
                        "shipDate": "{{ \"now\" | date: \"%Y-%m-%d\" }}",
                        "orderDate": "{{shopify.created_at}}",
                        "billTo": {
                            "name": "{{shopify.billing_address.name}}",
                            "company": "{{shopify.billing_address.company}}",
                            "street1": "{{shopify.billing_address.address1}}",
                            "street2": "{{shopify.billing_address.address2}}",
                            "city": "{{shopify.billing_address.city}}",
                            "state": "{{shopify.billing_address.province_code}}",
                            "postalCode": "{{shopify.billing_address.zip}}",
                            "country": "{{shopify.billing_address.country_code}}",
                            "phone": "{{shopify.billing_address.phone}}"
                        },
                        "shipTo": {
                            "name": "{{shopify.shipping_address.name}}",
                            "company": "{{shopify.shipping_address.company}}",
                            "street1": "{{shopify.shipping_address.address1}}",
                            "street2": "{{shopify.shipping_address.address2}}",
                            "city": "{{shopify.shipping_address.city}}",
                            "state": "{{shopify.shipping_address.province_code}}",
                            "postalCode": "{{shopify.shipping_address.zip}}",
                            "country": "{{shopify.shipping_address.country_code}}",
                            "phone": "{{shopify.shipping_address.phone}}"
                        },
                        "weight": {
                            "value": "{{shopify.total_weight}}",
                            "units": "grams"
                        }
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "body.orderKey",
                    "body.customerEmail",
                    "body.shipDate"
                ],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 5,
                "trigger_type": "output",
                "type": "shipstation",
                "entity": "order_createlabelfororder",
                "action": "create",
                "name": "Create Label for Order",
                "version": "v2",
                "key": "shipstation_1",
                "operation_id": "post_orders_createlabelfororder",
                "metadata": {
                    "api_endpoint": "post \/orders\/createlabelfororder",
                    "body": {
                        "orderId": "{{shipstation.orderId}}",
                        "carrierCode": "{{ template | label: 'Select or enter the carrier code for the shipping label.', description: '' }}",
                        "serviceCode": "{{ template | label: 'Select or enter the service code for the shipping label.', description: '' }}",
                        "packageCode": "{{ template | label: 'Select or enter the package code for the shipping label.', description: '' }}",
                        "confirmation": "none",
                        "testLabel": "true",
                        "shipDate": "{{ \"now\" | date: \"%Y-%m-%d\" }}",
                        "weight": {
                            "value": "{{shopify.total_weight}}",
                            "units": "grams"
                        }
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "body.weight.value",
                    "body.weight.units"
                ],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order",
                "action": "update",
                "name": "Update Order",
                "key": "shopify_1",
                "operation_id": "put_orders_order_id",
                "metadata": {
                    "api_endpoint": "put admin\/orders\/{{order_id}}.json",
                    "order_id": "{{shopify.id}}",
                    "body": {
                        "note_attributes": [
                            {
                                "name": "Shipping Label",
                                "value": "{{shipstation_1.labelData}}"
                            }
                        ]
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "body.note_attributes[].name",
                    "body.note_attributes[].value"
                ],
                "on_error": "default",
                "weight": 2
            },
            {
                "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order_fulfillment",
                "action": "custom_create",
                "name": "Create Order Fulfillment",
                "key": "shopify_2",
                "operation_id": "post_mesa_orders_order_id_fulfillments",
                "metadata": {
                    "api_endpoint": "post mesa\/orders\/{{order_id}}\/fulfillments.json",
                    "order_id": "{{shopify.id}}",
                    "body": {
                        "tracking_number": "{{shipstation_1.trackingNumber}}",
                        "location_id": "{{ template | label: 'Select or enter the location for the order fulfillment.', description: '' }}"
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "body.tracking_number"
                ],
                "on_error": "default",
                "weight": 3
            }
        ]
    }
}