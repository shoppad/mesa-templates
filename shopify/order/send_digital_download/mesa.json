{
    "key": "shopify/order/send_digital_download",
    "name": "Easily Sell Downloadable Products on Your Shopify Store",
    "version": "1.0.0",
    "enabled": false,
    "setup": false,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "order",
                "action": "created",
                "name": "Order Created",
                "key": "shopify",
                "metadata": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 5,
                "trigger_type": "output",
                "type": "loop",
                "version": "v2",
                "entity": "loop",
                "operation_id": "loop_loop",
                "name": "Loop",
                "key": "loop",
                "metadata": {
                    "key": "{{shopify.line_items[]}}"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "metadata": {
                    "a": "{{loop.fulfillment_service}}",
                    "comparison": "equals",
                    "b": "digital-download"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order_fulfillment",
                "action": "custom_create",
                "name": "Create Order Fulfillment",
                "key": "shopify_1",
                "metadata": {
                    "order_id": "{{shopify.id}}",
                    "body": {
                        "line_items": [
                            {
                                "id": "{{loop.id}}"
                            }
                        ],
                        "notify_customer": "false"
                    }
                },
                "local_fields": [
                    {
                        "key": "body",
                        "fields": [
                            {
                                "key": "notify_customer",
                                "type": "custom",
                                "allow_custom_fields": false
                            }
                        ]
                    }
                ],
                "on_error": "default",
                "weight": 2
            },
            {
                "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "shop",
                "action": "list",
                "name": "Retrieve Shop",
                "key": "shopify_2",
                "operation_id": "get_shop",
                "metadata": {
                    "api_endpoint": "get admin\/shop.json"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 3
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "email",
                "version": "v1",
                "name": "Send Email",
                "key": "email",
                "metadata": {
                    "to": "{{shopify.email}}",
                    "subject": "Link to your Digital Download ",
                    "message": "Hello {{shopify.customer.first_name}}!\n\nThank you for placing your order {{shopify.name}}.\n\nYour order is ready for download at this link: \n\nThanks!\n-{{shopify_2.name}}"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 4
            }
        ],
        "storage": []
    }
}