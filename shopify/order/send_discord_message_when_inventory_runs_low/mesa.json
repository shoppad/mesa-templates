{
    "key": "shopify/order/send_discord_message_when_inventory_runs_low",
    "name": "Send Shopify Low Stock Message to Discord",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "inventory_level",
                "action": "updated",
                "name": "Inventory Level Updated",
                "key": "shopify",
                "operation_id": "inventory_levels_update",
                "metadata": {
                    "frequency": "every",
                    "includeFields": []
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 4.1,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "operation_id": "filter",
                "metadata": {
                    "a": "{{shopify.available}}",
                    "comparison": "less than equal",
                    "b": "3",
                    "additional": [
                        {
                            "operator": "and",
                            "comparison": "equals"
                        }
                    ]
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "product_variant",
                "action": "inventory_item_id_to_product_variant",
                "name": "Retrieve Product Variant Details from Inventory Item ID",
                "key": "shopify_1",
                "operation_id": "get_mesa_productvariants_product_inventory_item_id_inventory_item_id_lookup",
                "metadata": {
                    "api_endpoint": "get mesa\/productVariants\/{{product_inventory_item_id}}\/inventory-item-id-lookup.json",
                    "product_inventory_item_id": "{{shopify.inventory_item_id}}"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "shop",
                "action": "list",
                "name": "Retrieve Shop",
                "key": "shopify_2",
                "operation_id": "get_shop",
                "metadata": {
                    "api_endpoint": "get admin\/shop.json"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 2
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "discord",
                "entity": "channel_message",
                "action": "create",
                "name": "Create Channel Message",
                "key": "discord",
                "operation_id": "post-channels-channelId-messages",
                "metadata": {
                    "api_endpoint": "post \/channels\/{channelId}\/messages",
                    "path": {
                        "channelId": "{{ template | label: 'What is your server''s channel ID?', description: '', tokens: false }}"
                    },
                    "body": {
                        "content": "{{shopify_1.product_title}} {{shopify_1.product_variant_title}} is running low on inventory. \n\nCurrent inventory quantity: {{shopify.available}}\n\nView the product: https:\/\/admin.shopify.com\/store\/{{shopify_2.myshopify_domain | replace: \".myshopify.com\", \"\"}}\/products\/{{shopify_1.product_id}}"
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "body.content"
                ],
                "on_error": "default",
                "weight": 3
            }
        ]
    }
}