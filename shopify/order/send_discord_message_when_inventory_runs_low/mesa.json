{
    "key": "shopify/order/send_discord_message_when_inventory_runs_low",
    "name": "Send Shopify Low Stock Message to Discord",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "inventory_level",
                "action": "updated",
                "name": "Inventory Level Updated",
                "key": "shopify",
                "operation_id": "inventory_levels_update",
                "metadata": {
                    "frequency": "every",
                    "includeFields": []
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 4.1,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "operation_id": "filter",
                "metadata": {
                    "a": "{{shopify.available}}",
                    "comparison": "less than equal",
                    "b": "3",
                    "additional": [
                        {
                            "operator": "and",
                            "comparison": "equals"
                        }
                    ]
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "shop",
                "action": "list",
                "name": "Retrieve Shop",
                "key": "shopify_1",
                "operation_id": "get_shop",
                "metadata": {
                    "api_endpoint": "get admin/shop.json"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "product_variant",
                "action": "retrieve_id",
                "name": "Retrieve Product Variant",
                "key": "shopify_2",
                "operation_id": "get_variants_variant_id",
                "metadata": {
                    "api_endpoint": "get admin/variants/{{variant_id}}.json",
                    "variant_id": "{{shopify.variant.id}}"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 2
            },
            {
                "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "product",
                "action": "retrieve",
                "name": "Retrieve Product",
                "key": "shopify_3",
                "operation_id": "get_products_product_id",
                "metadata": {
                    "api_endpoint": "get admin/products/{{product_id}}.json",
                    "product_id": "{{shopify_2.product_id}}"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 3
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "discord",
                "entity": "channel_message",
                "action": "create",
                "name": "Create Channel Message",
                "key": "discord",
                "operation_id": "post-channels-channelId-messages",
                "metadata": {
                    "api_endpoint": "post /channels/{channelId}/messages",
                    "path": {
                        "channelId": "{{ template | label: 'What is your server''s channel ID?', description: '', tokens: false }}"
                    },
                    "body": {
                        "content": "{{shopify_3.title}} {{shopify_2.title}} is running low on inventory.\n\nCurrent inventory quantity: {{shopify.available}}\n\nView product: https://admin.shopify.com/store/{{shopify_1.myshopify_domain | replace: \".myshopify.com\", \"\"}}/products/{{shopify_3.id}}"
                    }
                },
                "local_fields": [],
                "selected_fields": ["body.content"],
                "on_error": "default",
                "weight": 4
            }
        ]
    }
}
