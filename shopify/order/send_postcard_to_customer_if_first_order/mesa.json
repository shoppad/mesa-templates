{
    "key": "shopify/order/send_postcard_to_customer_if_first_order",
    "name": "Send a Personalized Postcard for First-Time Shopify Customers",
    "version": "1.0.0",
    "enabled": false,
    "setup": false,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "order",
                "action": "created",
                "name": "Order Created",
                "key": "shopify_order",
                "metadata": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "customer",
                "action": "retrieve",
                "name": "Retrieve Customer",
                "key": "shopify_customer",
                "operation_id": "get_customers_customer_id",
                "metadata": {
                    "api_endpoint": "get admin\/customers\/{{customer_id}}.json",
                    "customer_id": "{{shopify_order.customer.id}}"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "metadata": {
                    "a": "{{shopify_customer.orders_count}}",
                    "comparison": "equals",
                    "b": "1"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "shop",
                "action": "list",
                "name": "Retrieve Shop",
                "key": "shopify",
                "operation_id": "get_shop",
                "metadata": {
                    "api_endpoint": "get admin\/shop.json"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 2
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "postcardmania",
                "entity": "order",
                "action": "create",
                "name": "Create Order",
                "key": "postcardmania_order",
                "metadata": {
                    "body": {
                        "recipientList": [
                            {
                                "firstName": "{{shopify_order.customer.first_name}}",
                                "lastName": "{{shopify_order.customer.last_name}}",
                                "address": "{{shopify_order.customer.default_address.address1}}",
                                "address2": "{{shopify_order.customer.default_address.address2}}",
                                "city": "{{shopify_order.customer.default_address.city}}",
                                "state": "{{shopify_order.customer.default_address.province}}",
                                "zipCode": "{{shopify_order.customer.default_address.zip}}"
                            }
                        ],
                        "orderConfig": {
                            "designID": "",
                            "mailClass": "Standard",
                            "globalDesignVariables": [
                                {
                                    "key": "logo",
                                    "value": ""
                                },
                                {
                                    "key": "companyaddress",
                                    "value": "{{shopify.email}}"
                                },
                                {
                                    "key": "companycity",
                                    "value": "{{ shopify.city }}"
                                },
                                {
                                    "key": "companyname",
                                    "value": "{{shopify.name}}"
                                },
                                {
                                    "key": "companystate",
                                    "value": "{{shopify.province}}"
                                },
                                {
                                    "key": "companyurl",
                                    "value": "{{shopify.domain}}"
                                },
                                {
                                    "key": "companyzipcode",
                                    "value": "{{shopify.zip}}"
                                },
                                {
                                    "key": "phone",
                                    "value": "{{shopify.phone}}"
                                },
                                {
                                    "key": "productname",
                                    "value": "{{shopify_order.line_items[0].title}}"
                                }
                            ]
                        }
                    }
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 3
            }
        ]
    }
}