{
    "key": "shopify/order/send_gift_card_for_orders_over_100",
    "name": "Reward Customers with a $20 Gift Card for Orders Over $100",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "order",
                "action": "created",
                "name": "Order Created",
                "key": "shopify",
                "operation_id": "orders_create",
                "metadata": {
                    "frequency": "every",
                    "includeFields": []
                },
                "local_fields": [],
                "selected_fields": [
                    "frequency"
                ],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "delay",
                "name": "Delay",
                "version": "v2",
                "key": "delay",
                "operation_id": "delay",
                "metadata": {
                    "amount": "1",
                    "unit": "hours",
                    "test_bypass": false
                },
                "local_fields": [],
                "selected_fields": [
                    "amount",
                    "unit"
                ],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 4.1,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "operation_id": "filter",
                "metadata": {
                    "a": "{{shopify.total_line_items_price}}",
                    "comparison": "greater than equal",
                    "b": "100",
                    "additional": [
                        {
                            "operator": "and",
                            "comparison": "equals"
                        }
                    ]
                },
                "local_fields": [],
                "selected_fields": [
                    "a",
                    "comparison",
                    "b",
                    "additional"
                ],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "govalo",
                "entity": "card",
                "action": "create",
                "name": "Create Card",
                "key": "govalo",
                "operation_id": "post-card",
                "metadata": {
                    "api_endpoint": "post \/cards",
                    "body": {
                        "firstName": "{{shopify.customer.first_name}}",
                        "lastName": "{{shopify.customer.last_name}}",
                        "email": "{{shopify.email}}",
                        "note": "{{ template | label: 'What is the note that you want to send to the customer?', description: '', default: 'Thank you for being an awesome customer!' }}",
                        "value": "20",
                        "eventType": "giftcard",
                        "productId": "{{ template | label: 'What is the product ID?', description: '' }}"
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "body",
                    "body.firstName",
                    "body.lastName",
                    "body.email",
                    "body.note",
                    "body.value",
                    "body.eventType"
                ],
                "on_error": "default",
                "weight": 2
            }
        ]
    }
}