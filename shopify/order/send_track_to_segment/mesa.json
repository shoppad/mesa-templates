{
    "key": "shopify/order/send_track_to_segment",
    "name": "Automatically Send Shopify Order Status Updates to Segment",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "order",
                "action": "updated",
                "name": "Order Updated",
                "key": "shopify_order",
                "operation_id": "orders_updated",
                "metadata": [],
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "segment",
                "entity": "track",
                "action": "send",
                "name": "Track",
                "key": "segment_track",
                "operation_id": "post-track",
                "metadata": {
                    "api_endpoint": "post /track",
                    "body": {
                        "userId": "{{shopify_order.customer.id}}",
                        "event": "Order Status Update",
                        "timestamp": "{{shopify_order.updated_at}}",
                        "properties": {
                            "order_id": "{{shopify_order.id}}",
                            "order_number": "{{shopify_order.name}}",
                            "order_tags": "{{shopify_order.tags}}",
                            "order_processed_at": "{{shopify_order.processed_at}}",
                            "shipping_state": "{{shopify_order.shipping_address.province}}",
                            "shipping_zip": "{{shopify_order.shipping_address.zip}}",
                            "email": "{{shopify_order.email}}",
                            "phone": "{{shopify_order.phone}}"
                        },
                        "context": {
                            "app": {
                                "name": "Mesa"
                            },
                            "traits": {
                                "email": "{{shopify_order.email}}",
                                "firstName": "{{shopify_order.customer.first_name}}",
                                "id": "{{shopify_order.customer.id}}",
                                "lastName": "{{shopify_order.customer.last_name}}",
                                "phone": "{{shopify_order.phone}}",
                                "address": {
                                    "street": "{{shopify_order.billing_address.address1}}{{shopify_order.billing_address.address2}}",
                                    "city": "{{shopify_order.billing_address.city}}",
                                    "state": "{{shopify_order.billing_address.province}}",
                                    "postalCode": "{{shopify_order.billing_address.zip}}",
                                    "country": "{{shopify_order.billing_address.country}}"
                                }
                            }
                        }
                    }
                },
                "local_fields": [
                    {
                        "key": "body",
                        "fields": [
                            {
                                "key": "properties",
                                "fields": [
                                    {
                                        "key": "order_id",
                                        "type": "custom",
                                        "allow_custom_fields": false
                                    },
                                    {
                                        "key": "order_number",
                                        "type": "custom",
                                        "allow_custom_fields": false
                                    },
                                    {
                                        "key": "order_tags",
                                        "type": "custom",
                                        "allow_custom_fields": false
                                    },
                                    {
                                        "key": "order_processed_at",
                                        "type": "custom",
                                        "allow_custom_fields": false
                                    },
                                    {
                                        "key": "shipping_state",
                                        "type": "custom",
                                        "allow_custom_fields": false
                                    },
                                    {
                                        "key": "shipping_zip",
                                        "type": "custom",
                                        "allow_custom_fields": false
                                    },
                                    {
                                        "key": "email",
                                        "type": "custom",
                                        "allow_custom_fields": false
                                    },
                                    {
                                        "key": "phone",
                                        "type": "custom",
                                        "allow_custom_fields": false
                                    }
                                ]
                            }
                        ]
                    }
                ],
                "selected_fields": [
                    "body",
                    "body.userId",
                    "body.event",
                    "body.timestamp",
                    "body.properties",
                    "body.context",
                    "body.context.app",
                    "body.context.app.name",
                    "body.context.traits",
                    "body.context.traits.email",
                    "body.context.traits.firstName",
                    "body.context.traits.id",
                    "body.context.traits.lastName",
                    "body.context.traits.phone",
                    "body.context.traits.address",
                    "body.context.traits.address.street",
                    "body.context.traits.address.city",
                    "body.context.traits.address.state",
                    "body.context.traits.address.postalCode",
                    "body.context.traits.address.country"
                ],
                "on_error": "default",
                "weight": 0
            }
        ]
    }
}
