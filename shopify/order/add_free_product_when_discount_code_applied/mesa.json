{
    "key": "shopify/order/add_free_product_when_discount_code_applied",
    "name": "Add a Free Product to Shopify Orders with Specific Discount Codes",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "order",
                "action": "created",
                "name": "Order Created",
                "key": "shopify",
                "operation_id": "orders_create",
                "metadata": {
                    "frequency": "every",
                    "includeFields": []
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 5,
                "trigger_type": "output",
                "type": "loop",
                "entity": "loop",
                "name": "Loop over the order's discount codes",
                "version": "v3",
                "key": "loop",
                "operation_id": "loop_loop",
                "metadata": {
                    "key": "{{shopify.discount_codes[]}}",
                    "filter": {
                        "comparison": "equals",
                        "additional": [
                            {
                                "operator": "and",
                                "comparison": "equals"
                            }
                        ]
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "key"
                ],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter for a specific discount code",
                "key": "filter",
                "metadata": {
                    "comparison": "equals",
                    "a": "{{loop.code}}",
                    "trigger_parent_key": "loop",
                    "b": "{{ template | label: 'What is the specific discount code customers will use?', description: '' }}",
                    "additional": [
                        {
                            "operator": "and",
                            "comparison": "equals"
                        }
                    ]
                },
                "local_fields": [],
                "selected_fields": [
                    "a",
                    "comparison"
                ],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order",
                "action": "line_item_add",
                "name": "Add Line Item to Order",
                "key": "shopify_1",
                "operation_id": "post_mesa_orders_order_id_add-line-item",
                "metadata": {
                    "api_endpoint": "post mesa\/orders\/{{order_id}}\/add-line-item.json",
                    "body": {
                        "product_id": "{{ template | label: 'What is the free product you would like to add?', description: '' }}",
                        "variant_id": "{{ template | label: 'What is the variant of the free product you would like to add?', description: 'Select ''Default Title'' if there are no additional variants.' }}",
                        "quantity": "1",
                        "discount_type": "Percentage",
                        "discount_amount": "100",
                        "allow_duplicates": true,
                        "notify_customer": "false"
                    },
                    "order_id": "{{shopify.id}}",
                    "trigger_parent_key": "loop"
                },
                "local_fields": [],
                "selected_fields": [
                    "order_id",
                    "body",
                    "body.quantity",
                    "body.discount_type",
                    "body.discount_amount",
                    "body.allow_duplicates",
                    "body.notify_customer"
                ],
                "on_error": "default",
                "weight": 2
            },
            {
                "schema": 5.1,
                "trigger_type": "output",
                "type": "loop",
                "entity": "end",
                "name": "Loop End",
                "version": "v3",
                "key": "loop_1",
                "operation_id": "loop_end",
                "metadata": {
                    "trigger_manager_key": "loop",
                    "trigger_parent_key": "loop"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 3
            }
        ]
    }
}