{
    "key": "shopify/order/schedule_daily_export_of_orders_into_google_sheets",
    "name": "Schedule Daily Shopify Order Exports to Google Sheets",
    "version": "1.0.0",
    "enabled": false,
    "setup": false,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "schedule",
                "name": "Schedule",
                "key": "schedule",
                "operation_id": "schedule",
                "metadata": {
                    "schedule": "@daily:0 0 * * *",
                    "enqueue_type": "schedule"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "data",
                "entity": "record",
                "action": "query",
                "name": "Query",
                "key": "data",
                "operation_id": "get_database_table",
                "metadata": {
                    "api_endpoint": "get \/{database}\/{table}",
                    "query": "SELECT * FROM \"Add table name here\" WHERE \"Created At\" > '{{date:yesterday}}';",
                    "where_clause": {
                        "comparison": "equals"
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "query"
                ],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 4.1,
                "trigger_type": "output",
                "type": "googlesheets",
                "entity": "spreadsheet",
                "action": "create",
                "name": "Create New Spreadsheet",
                "version": "v2",
                "key": "googlesheets",
                "operation_id": "spreadsheet_create",
                "metadata": {
                    "api_endpoint": "post \/",
                    "body": {
                        "title": "Order Export for {{\"now\" | date: \"%Y-%m-%dT%H:%M:%S%z\"}}"
                    }
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "replay",
                "weight": 1
            },
            {
                "schema": 4.1,
                "trigger_type": "output",
                "type": "googlesheets",
                "entity": "row",
                "action": "bulk_add",
                "name": "Bulk Add Rows",
                "version": "v2",
                "key": "googlesheets_1",
                "operation_id": "record_bulk_create",
                "metadata": {
                    "api_endpoint": "post \/{spreadsheet_id}\/{sheet}\/bulk",
                    "path": {
                        "spreadsheet_id": "{{googlesheets.spreadsheet_id}}",
                        "sheet": "Sheet1"
                    },
                    "body": {
                        "data": "{{data}}"
                    }
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "replay",
                "weight": 2
            }
        ]
    }
}