{
    "key": "shopify/order/send_slack_alert_if_no_orders_received_within_past_hour",
    "name": "Send Slack Alert if No Shopify Orders Are Received Within an Hour",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "schedule",
                "name": "Schedule",
                "key": "schedule",
                "operation_id": "schedule",
                "metadata": {
                    "schedule": "@hourly:0 * * * *",
                    "enqueue_type": "schedule"
                },
                "local_fields": [],
                "selected_fields": [
                    "enqueue_type",
                    "schedule",
                    "next_sync_date_time"
                ],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order",
                "action": "list",
                "name": "Get List of Orders",
                "key": "shopify",
                "operation_id": "get_orders",
                "metadata": {
                    "api_endpoint": "get admin/orders.json",
                    "query": {
                        "status": "any",
                        "created_at_min": "{{\"now\" | date: \"%Y-%m-%dT%H:%M:%S%z\" | subtract_time: 1, \"hours\" | date: \"%Y-%m-%dT%H:%M:%S%z\"}}"
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "query.status",
                    "query.created_at_min"
                ],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 4.1,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "operation_id": "filter",
                "metadata": {
                    "a": "{{shopify}}",
                    "comparison": "is empty",
                    "additional": [
                        {
                            "operator": "and",
                            "comparison": "equals"
                        }
                    ]
                },
                "local_fields": [],
                "selected_fields": [
                    "a",
                    "comparison",
                    "additional"
                ],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "shop",
                "action": "list",
                "name": "Retrieve Shop",
                "key": "shopify_1",
                "operation_id": "get_shop",
                "metadata": {
                    "api_endpoint": "get admin\/shop.json"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 2
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "slack",
                "name": "Send Message",
                "version": "v2",
                "key": "slack",
                "operation_id": "slack",
                "metadata": {
                    "channel": "{{ template | label: 'To which Slack channel would you like to send the message?', tokens: false }}",
                    "message": "No orders have been placed on {{shopify_1.name}} in the past 1 hour."
                },
                "local_fields": [],
                "selected_fields": [
                    "message"
                ],
                "on_error": "default",
                "weight": 3
            }
        ]
    }
}