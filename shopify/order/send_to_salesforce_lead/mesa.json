{
    "key": "shopify/order/send_to_salesforce_lead",
    "name": "Convert Shopify Customers to Salesforce Leads Automatically",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "order",
                "action": "created",
                "name": "Order Created",
                "key": "shopify_order",
                "operation_id": "orders_create",
                "metadata": [],
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "salesforce",
                "entity": "lead",
                "action": "create",
                "name": "Create Lead",
                "key": "salesforce_lead",
                "operation_id": "lead_create",
                "metadata": {
                    "entity_name": "Lead",
                    "method": "POST",
                    "body": {
                        "LastName": "{{shopify_order.customer.last_name}}",
                        "FirstName": "{{shopify_order.customer.first_name}}",
                        "Company": "{% if shopify_order.customer.default_address.company %}{{shopify_order.customer.default_address.company}}{% else %}Shopify Customer{% endif %}",
                        "Street": "{{shopify_order.customer.default_address.address1}} {{shopify_order.customer.default_address.address2}}",
                        "City": "{{shopify_order.customer.default_address.city}}",
                        "State": "{{shopify_order.customer.default_address.province}}",
                        "PostalCode": "{{shopify_order.customer.default_address.zip}}",
                        "Country": "{{shopify_order.customer.default_address.country}}",
                        "Phone": "{{shopify_order.customer.default_address.phone}}",
                        "Email": "{{shopify_order.email}}"
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "body",
                    "body.LastName",
                    "body.FirstName",
                    "body.Company",
                    "body.Street",
                    "body.City",
                    "body.State",
                    "body.PostalCode",
                    "body.Country",
                    "body.Phone",
                    "body.Email",
                    "method",
                    "entity_name"
                ],
                "on_error": "default",
                "weight": 0
            }
        ]
    }
}
