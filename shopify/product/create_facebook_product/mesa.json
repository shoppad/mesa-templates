{
    "key": "shopify/product/create_facebook_product",
    "name": "Automatically Create Facebook Catalog Product from Tagged Shopify Product",
    "version": "1.0.0",
    "enabled": false,
    "setup": false,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "product",
                "action": "created",
                "name": "Product Created",
                "key": "shopify_product",
                "metadata": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "metadata": {
                    "a": "facebook",
                    "comparison": "in",
                    "b": "{{shopify_product.tags}}"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "shop",
                "action": "list",
                "name": "Retrieve Shop",
                "key": "shopify_1",
                "operation_id": "get_shop",
                "metadata": {
                    "api_endpoint": "get admin\/shop.json"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "facebook",
                "entity": "product",
                "action": "create",
                "name": "Product Create",
                "key": "facebook_product",
                "metadata": {
                    "path": {
                        "business": "",
                        "catalog": ""
                    },
                    "body": {
                        "name": "{{shopify_product.title}}",
                        "currency": "USD",
                        "price": "{{shopify_product.variants[0].price}}",
                        "image_url": "{{shopify_product.images[0].src}}",
                        "category": "{{shopify_product.product_type}}",
                        "retailer_id": "{{shopify_product.variants[0].sku}}",
                        "url": "https://{{shopify_1.domain}}/products/{{shopify_product.handle}}",
                        "description": "{{shopify_product.body_html}}",
                        "brand": "{{shopify_product.vendor}}"
                    }
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 2
            }
        ]
    }
}