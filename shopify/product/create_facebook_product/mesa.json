{
    "key": "shopify/product/create_facebook_product",
    "name": "Automatically Create Facebook Catalog Product from Tagged Shopify Product",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "product",
                "action": "created",
                "name": "Product Created",
                "key": "shopify_product",
                "operation_id": "products_create",
                "metadata": {
                    "frequency": "every",
                    "includeFields": []
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "metadata": {
                    "a": "facebook",
                    "comparison": "in",
                    "b": "{{shopify_product.tags}}",
                    "additional": [
                        {
                            "operator": "and",
                            "comparison": "equals"
                        }
                    ]
                },
                "local_fields": [],
                "selected_fields": ["a", "comparison", "b"],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "shop",
                "action": "list",
                "name": "Retrieve Shop",
                "key": "shopify_1",
                "operation_id": "get_shop",
                "metadata": {
                    "api_endpoint": "get admin/shop.json"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "facebook",
                "entity": "product",
                "action": "create",
                "name": "Product Create",
                "key": "facebook_product",
                "operation_id": "ProductCreate",
                "metadata": {
                    "api_endpoint": "post /{catalog}/products",
                    "body": {
                        "name": "{{shopify_product.title}}",
                        "currency": "USD",
                        "price": "{{shopify_product.variants[0].price}}",
                        "image_url": "{{shopify_product.images[0].src}}",
                        "category": "{{shopify_product.product_type}}",
                        "retailer_id": "{{shopify_product.variants[0].sku}}",
                        "url": "https://{{shopify_1.domain}}/products/{{shopify_product.handle}}",
                        "description": "{{shopify_product.body_html}}",
                        "brand": "{{shopify_product.vendor}}"
                    },
                    "path": {
                        "business": "{{ template | label: 'What is your business?', description: '' }}",
                        "catalog": "{{ template | label: 'What is your catalog?', description: '' }}"
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "path",
                    "body",
                    "body.name",
                    "body.currency",
                    "body.price",
                    "body.image_url",
                    "body.category",
                    "body.retailer_id",
                    "body.url",
                    "body.description",
                    "body.brand"
                ],
                "on_error": "default",
                "weight": 2
            }
        ]
    }
}
