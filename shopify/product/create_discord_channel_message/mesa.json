{
    "key": "shopify/product/create_discord_channel_message",
    "name": "Send Discord Channel Message for New Shopify Products",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "product",
                "action": "created",
                "name": "Product Created",
                "key": "shopify",
                "operation_id": "products_create",
                "metadata": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "delay",
                "name": "Delay",
                "version": "v2",
                "key": "delay",
                "metadata": {
                    "amount": "30",
                    "unit": "minutes",
                    "test_bypass": true
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "product",
                "action": "retrieve",
                "name": "Retrieve Product",
                "key": "shopify_1",
                "operation_id": "get_products_product_id",
                "metadata": {
                    "api_endpoint": "get admin/products/{{product_id}}.json",
                    "product_id": "{{shopify.id}}"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "shop",
                "action": "list",
                "name": "Retrieve Shop",
                "key": "shopify_2",
                "operation_id": "get_shop",
                "metadata": {
                    "api_endpoint": "get admin\/shop.json"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 2
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "discord",
                "entity": "channel_message",
                "action": "create",
                "name": "Create Channel Message",
                "key": "discord",
                "operation_id": "post-channels-channelId-messages",
                "metadata": {
                    "api_endpoint": "post /channels/{channelId}/messages",
                    "body": {
                        "embed": {
                            "title": "New Product Added",
                            "description": "\ud83c\udf89 New Product \ud83c\udf89\n{{shopify_1.title}}\n\nView Product: https://{{shopify_2.domain}}/products/{{shopify_1.handle}}",
                            "timestamp": "{{shopify_1.published_at}}",
                            "color": "15105570",
                            "image": {
                                "url": "{{shopify_1.images[0].src}}"
                            }
                        }
                    },
                    "path": {
                        "channelId": "{{ template | label: 'What is your server''s channel ID?', description: '', tokens: false }}"
                    }
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 3
            }
        ]
    }
}