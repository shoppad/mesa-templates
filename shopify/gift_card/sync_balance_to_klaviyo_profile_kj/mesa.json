                            "disabled": "67c8caffd6cf40974d0ed799"
                        },
                        {
                            "key": "Admin Gift Card URL",
                            "type": "text",
                            "value": "https:\/\/admin.shopify.com\/store\/{{ context.shop.domain | replace: \".myshopify.com\", \"\" }}\/gift_cards\/{{loop.id}}",
