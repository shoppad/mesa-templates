                "operation_id": "post_database_table_upsert",
                "metadata": {
                    "api_endpoint": "post \/{database}\/{table}\/upsert",
                    "trigger_parent_key": "loop",
                    "create": "existing",
                    "columns": [
                        {
                            "key": "Gift Card ID",
                            "type": "numeric",
                            "value": "{{loop.id}}",
                            "disabled": "67c8caffd6cf40974d0ed799"
