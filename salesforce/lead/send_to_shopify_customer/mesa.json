{
    "key": "salesforce/lead/send_to_shopify_customer",
    "name": "Convert Salesforce Leads to Shopify Customers Automatically",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "salesforce",
                "entity": "lead",
                "action": "list-converted",
                "name": "Lead Converted",
                "key": "salesforce_lead",
                "operation_id": "lead_list-converted",
                "metadata": {
                    "entity_name": "Lead",
                    "method": "list-converted",
                    "poll": "@hourly:0 * * * *"
                },
                "local_fields": [],
                "selected_fields": [
                    "method",
                    "entity_name",
                    "poll",
                    "next_sync_date_time"
                ],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "customer",
                "action": "create",
                "name": "Create Customer",
                "key": "shopify_customer",
                "operation_id": "post_customers",
                "metadata": {
                    "api_endpoint": "post admin/customers.json",
                    "body": {
                        "email": "{{salesforce_lead.Email}}",
                        "phone": "{{salesforce_lead.Phone}}",
                        "first_name": "{{salesforce_lead.FirstName}}",
                        "last_name": "{{salesforce_lead.LastName}}",
                        "addresses": [
                            {
                                "address1": "{{salesforce_lead.Street}}",
                                "phone": "{{salesforce_lead.Phone}}",
                                "city": "{{salesforce_lead.City}}",
                                "province": "{{salesforce_lead.State}}",
                                "zip": "{{salesforce_lead.PostalCode}}",
                                "country": "{{salesforce_lead.Country}}"
                            }
                        ]
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "body",
                    "body.addresses",
                    "body.addresses[].address1",
                    "body.addresses[].city",
                    "body.addresses[].country",
                    "body.addresses[].phone",
                    "body.addresses[].province",
                    "body.addresses[].zip",
                    "body.email",
                    "body.first_name",
                    "body.last_name",
                    "body.phone"
                ],
                "on_error": "default",
                "weight": 0
            }
        ]
    }
}
