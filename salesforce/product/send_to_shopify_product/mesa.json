{
    "key": "salesforce/product/send_to_shopify_product",
    "name": "Automatically Sync New Salesforce Products to Shopify",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "salesforce",
                "entity": "product",
                "action": "list-created",
                "name": "Product Created",
                "key": "salesforce_product",
                "operation_id": "product_list-created",
                "metadata": {
                    "entity_name": "Product2",
                    "method": "list-created",
                    "poll": "@hourly:0 * * * *"
                },
                "local_fields": [],
                "selected_fields": [
                    "method",
                    "entity_name",
                    "poll",
                    "next_sync_date_time"
                ],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "product",
                "action": "create",
                "name": "Create Product",
                "key": "shopify_product",
                "operation_id": "post_products",
                "metadata": {
                    "api_endpoint": "post admin/products.json",
                    "body": {
                        "title": "{{salesforce_product.Name}}",
                        "body_html": "{{salesforce_product.Description}}",
                        "variants": [
                            {
                                "barcode": "{{salesforce_product.ProductCode}}",
                                "sku": "{{salesforce_product.StockKeepingUnit}}"
                            }
                        ]
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "body",
                    "body.body_html",
                    "body.title",
                    "body.variants",
                    "body.variants[].barcode",
                    "body.variants[].sku"
                ],
                "on_error": "default",
                "weight": 0
            }
        ]
    }
}
