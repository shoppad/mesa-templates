{
    "key": "uploadery/order/send_file_to_dropbox",
    "name": "Send Shopify Order Upload Files to Dropbox",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 4,
                "trigger_type": "input",
                "type": "uploadery",
                "entity": "order",
                "action": "created",
                "name": "Order Created",
                "key": "uploadery",
                "operation_id": "order_created",
                "metadata": {
                    "field_name": "all_uploadery_upload_fields"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 5.1,
                "trigger_type": "output",
                "type": "loop",
                "entity": "loop",
                "name": "Loop",
                "version": "v3",
                "key": "loop",
                "operation_id": "loop_loop",
                "metadata": {
                    "key": "{{uploadery.fields[]}}",
                    "filter": {
                        "comparison": "equals",
                        "additional": [
                            {
                                "operator": "and",
                                "comparison": "equals"
                            }
                        ]
                    }
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "dropbox",
                "entity": "file",
                "action": "save",
                "name": "Save File",
                "version": "v2",
                "key": "dropbox",
                "operation_id": "file_save",
                "metadata": {
                    "api_endpoint": "post \/files\/save_url",
                    "trigger_parent_key": "loop",
                    "body": {
                        "file_url": "{{loop.value}}",
                        "folder_path": "{{ template | label: 'What folder would you like to save files to?', description: 'Select a folder from the dropdown. If you don''t see it, ensure the folder is created in your Dropbox account, then refresh and select the correct folder.' }}"
                    }
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 5.1,
                "trigger_type": "output",
                "type": "loop",
                "entity": "end",
                "name": "Loop End",
                "version": "v3",
                "key": "loop_1",
                "operation_id": "loop_end",
                "metadata": {
                    "trigger_manager_key": "loop",
                    "trigger_parent_key": "loop"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 2
            }
        ]
    }
}