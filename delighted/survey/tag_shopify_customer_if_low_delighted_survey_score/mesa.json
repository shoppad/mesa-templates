{
    "key": "delighted/survey/tag_shopify_customer_if_low_delighted_survey_score",
    "name": "Automatically Tag Shopify Customers with Negative Survey Responses",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "delighted",
                "entity": "survey",
                "action": "survey/created",
                "name": "Survey Response Created",
                "key": "delighted_survey",
                "metadata": {
                    "host": "{{ template | label: 'Install the webhook URL', description: '' }}"
                },
                "local_fields": [],
                "selected_fields": ["host"],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "metadata": {
                    "a": "{{delighted_survey.score}}",
                    "comparison": "less than",
                    "b": "5"
                },
                "local_fields": [],
                "selected_fields": ["a", "comparison", "b"],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "customer_search",
                "action": "list",
                "name": "Get List Customer Search",
                "key": "shopify_customer_search",
                "operation_id": "get_customers_search",
                "metadata": {
                    "api_endpoint": "get admin/customers/search.json",
                    "parameters": "query=email:{{delighted_survey.person.email}}"
                },
                "local_fields": [],
                "selected_fields": ["parameters"],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter_1",
                "metadata": {
                    "a": "{{shopify_customer_search[0].email}}",
                    "comparison": "equals",
                    "b": "{{delighted_survey.person.email}}"
                },
                "local_fields": [],
                "selected_fields": ["a", "comparison", "b"],
                "on_error": "default",
                "weight": 2
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "customer",
                "action": "tag_add",
                "name": "Customer Add Tag",
                "key": "shopify_customer",
                "operation_id": "post_mesa_customers_customer_id_tag",
                "metadata": {
                    "api_endpoint": "post mesa/customers/{{customer_id}}/tag.json",
                    "customer_id": "{{shopify_customer_search.0.id}}",
                    "body": {
                        "tag": "Unhappy Survey"
                    }
                },
                "local_fields": [],
                "selected_fields": ["customer_id", "body", "body.tag"],
                "on_error": "default",
                "weight": 3
            }
        ]
    }
}
