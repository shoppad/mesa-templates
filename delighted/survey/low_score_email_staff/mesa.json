{
    "key": "delighted/survey/low_score_email_staff",
    "name": "Notify Staff by Email When a Low Delighted Score is Received",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "delighted",
                "entity": "survey",
                "action": "survey\/response",
                "name": "Survey Response",
                "key": "delighted_survey",
                "operation_id": "survey_response_created_or_updated",
                "metadata": {
                    "host": "{{ template | label: 'Install the webhook URL', description: '' }}"
                },
                "local_fields": [],
                "selected_fields": [
                    "host",
                    "topic"
                ],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "metadata": {
                    "a": "{{delighted_survey.score}}",
                    "comparison": "less than",
                    "b": "5"
                },
                "local_fields": [],
                "selected_fields": [
                    "a",
                    "comparison",
                    "b"
                ],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "email",
                "name": "Email",
                "version": "v1",
                "key": "email",
                "metadata": {
                    "subject": "Low NPS Score:  {{delighted_survey.person.name}}left a score of {{delighted_survey.score}}",
                    "message": "{{delighted_survey.person.name}}gave a Delighted score of: {{delighted_survey.score}}\n\n{{delighted_survey.comment}}\n\n{{delighted_survey.person.email}}",
                    "from": "{{delighted_survey.person.email}}"
                },
                "local_fields": [],
                "selected_fields": [
                    "subject",
                    "message",
                    "from"
                ],
                "on_error": "default",
                "weight": 1
            }
        ]
    }
}
