{
    "key": "delighted/survey/send_slack_message_if_low_delighted_survey_score",
    "name": "Notify Team on Slack for Low Delighted Survey Scores",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "delighted",
                "entity": "survey",
                "action": "survey\/response",
                "name": "Survey Response",
                "key": "delighted",
                "operation_id": "survey_response_created_or_updated",
                "metadata": {
                    "host": "{{ template | label: 'Install the webhook URL', description: '' }}"
                },
                "local_fields": [],
                "selected_fields": [
                    "host",
                    "topic"
                ],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "metadata": {
                    "a": "{{delighted.score}}",
                    "comparison": "less than",
                    "b": "5"
                },
                "local_fields": [],
                "selected_fields": [
                    "a",
                    "comparison",
                    "b"
                ],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "slack",
                "name": "Send Message",
                "version": "v2",
                "key": "slack",
                "metadata": {
                    "channel": "{{ template | label: 'Which Slack channel should the message be sent to?', description: 'Invite the MESA Slack app by typing @MESA and clicking the Invite button before selecting your channel. Private channels may not appear until you invite the MESA Slack app.', tokens: false }}",
                    "message": "{{delighted.person.name}} gave a Delighted score of: {{delighted.score}}\nCustomer's Comment: {{delighted.comment}}\nCustomer's Email: {{delighted.person.email}}"
                },
                "local_fields": [],
                "selected_fields": [
                    "message"
                ],
                "on_error": "default",
                "weight": 1
            }
        ]
    }
}