{
    "key": "ftp/update_shopify_inventory_with_csv_file",
    "name": "Automate Shopify Inventory Updates from CSV on FTP Server",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "ftp",
                "entity": "csv",
                "action": "csv",
                "name": "Fetch CSV File",
                "version": "v2",
                "key": "ftp",
                "operation_id": "csv",
                "metadata": {
                    "api_endpoint": "post /ftp/csv",
                    "file": "{{ template | label: 'What is the name of the CSV file?', description: 'The path to the file on the FTP server, you can use '*' wildcards to match portions of the path. Note: the file must be a valid CSV to be read.\n\nIt is required that you have columns SKU and Inventory in your CSV file.', tokens: false, placeholder: 'orders/Order*.csv' }}",
                    "move_file": false,
                    "schedule": "@hourly:0 * * * *"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 5.1,
                "trigger_type": "output",
                "type": "loop",
                "entity": "loop",
                "name": "Loop",
                "version": "v3",
                "key": "loop",
                "operation_id": "loop_loop",
                "metadata": {
                    "key": "{{ftp}}",
                    "filter": {
                        "comparison": "equals",
                        "additional": [
                            {
                                "operator": "and",
                                "comparison": "equals"
                            }
                        ]
                    }
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "product_variant",
                "action": "sku_to_product_variant",
                "name": "Retrieve Product Variant Details from SKU",
                "key": "shopify",
                "operation_id": "get_mesa_productvariants_product_sku_sku_lookup",
                "metadata": {
                    "api_endpoint": "get mesa/productVariants/{{product_sku}}/sku-lookup.json",
                    "trigger_parent_key": "loop",
                    "product_sku": "{{loop[\"SKU\"]}}"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "inventory_level",
                "action": "set-by-variant",
                "name": "Set Inventory Level By Variant",
                "key": "shopify_1",
                "operation_id": "post_mesa_inventory_levels_set_by_variant",
                "metadata": {
                    "api_endpoint": "post mesa/inventory_levels/set-by-variant.json",
                    "trigger_parent_key": "loop",
                    "body": {
                        "available": "{{loop.inventory}}",
                        "location_id": "{{ template | label: 'What is your store''s location where the inventory will be updated?', description: 'Make sure this is the correct location and it is enabled before continuing.' , tokens: false }}",
                        "variant_id": "{{shopify.product_variant_id}}"
                    }
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 2
            },
            {
                "schema": 5.1,
                "trigger_type": "output",
                "type": "loop",
                "entity": "end",
                "name": "Loop End",
                "version": "v3",
                "key": "loop_1",
                "operation_id": "loop_end",
                "metadata": {
                    "trigger_manager_key": "loop",
                    "trigger_parent_key": "loop"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 3
            }
        ]
    }
}
